{
  "kind": "collectionType",
  "collectionName": "article",
  "info": {
    "singularName": "articles",
    "pluralName": "article",
    "displayName": "articles",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tags.tags",
      "inversedBy": "articles"
    },
    "comments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::comments.comments",
      "mappedBy": "article"
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "articles"
    },
    "waitingroom": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "views": {
      "type": "integer",
      "required": true,
      "default": 1
    },
    "cover": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "ratings": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::rating.rating",
      "mappedBy": "article"
    }
  }
}
