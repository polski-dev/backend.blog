{
  "kind": "collectionType",
  "collectionName": "post",
  "info": {
    "singularName": "posts",
    "pluralName": "post",
    "displayName": "Posts",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tags.tags",
      "inversedBy": "posts"
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "posts"
    },
    "views": {
      "type": "integer",
      "required": true,
      "default": 1
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "ratings": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::ratings.ratings",
      "mappedBy": "post"
    },
    "content": {
      "type": "richtext",
      "required": true,
      "default": "Opis.."
    },
    "type": {
      "type": "enumeration",
      "enum": ["article", "video", "podcast"],
      "required": true
    },
    "youtube": {
      "type": "string",
      "required": false,
      "unique": true
    },
    "podcast": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["audios"]
    }
  }
}
